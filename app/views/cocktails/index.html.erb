<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1509807995916-c332365e2d9e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1571&q=80);">
  <div class="headder">
    <h1>Feeling Thirsty?</h1>
    <p>You've come to the right place.</p>
    <%= link_to "Get Creative", new_cocktail_path, class: "btn btn-ghost" %>
  </div>
</div>



<div class="container">
  <div class="cards">

      <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://loremflickr.com/320/240/drink,cocktail)">
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "drink-link" %>
        </div>
      <% end %>
  </div>
</div>



